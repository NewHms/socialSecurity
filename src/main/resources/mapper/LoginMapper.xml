<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.soft.social.login.dao.LoginDao">

    <select id="selectUser" resultType="java.lang.String" parameterType="java.lang.String">
        SELECT user.uuid
        FROM user user
        where user.telephone_num = #{telephoneNum}
    </select>


	<update id="updateVerify" parameterType="java.lang.String">
		update user u set u.verify_code = #{verifyCode}
		where u.uuid = #{uuid}

	</update>

	<insert id="insertUserInfo" parameterType="com.soft.social.login.model.UserEtity">
		insert into user (uuid,telephone_num,verify_code)
		values (#{uuid},#{telephoneNum},#{verifyCode})
	</insert>

	<insert id="insertVerifyCode" parameterType="java.lang.String">
		insert into verify_code_info (phone_num,verify_code)
		values (#{phoneNum},#{verifyCode})
	</insert>
</mapper>
